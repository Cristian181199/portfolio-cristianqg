---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="py-20 px-4 bg-secondary/5">
  <div class="container mx-auto max-w-4xl">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-4">
      {t('contact.title')}
    </h2>
    
    <p class="text-center text-[var(--text-secondary)] text-lg mb-12">
      {t('contact.description')}
    </p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Contact Form -->
      <div>
        <form id="contact-form" class="space-y-4">
          <div>
            <label for="name" class="block mb-2 font-medium">
              {t('contact.form.name')}
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 rounded-lg border border-secondary/20 bg-[var(--bg-primary)] focus:outline-none focus:border-[var(--color-primary)] transition-colors"
            />
          </div>
          
          <div>
            <label for="email" class="block mb-2 font-medium">
              {t('contact.form.email')}
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 rounded-lg border border-secondary/20 bg-[var(--bg-primary)] focus:outline-none focus:border-[var(--color-primary)] transition-colors"
            />
          </div>
          
          <div>
            <label for="message" class="block mb-2 font-medium">
              {t('contact.form.message')}
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full px-4 py-3 rounded-lg border border-secondary/20 bg-[var(--bg-primary)] focus:outline-none focus:border-[var(--color-primary)] transition-colors resize-none"
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full px-6 py-3 bg-[var(--color-primary)] hover:bg-[var(--color-primary)]/80 text-white font-semibold rounded-lg transition-colors duration-200"
          >
            {t('contact.form.send')}
          </button>
          
          <div id="form-message" class="hidden p-4 rounded-lg"></div>
        </form>
      </div>
      
      <!-- Contact Info -->
      <div class="space-y-6">
        <div class="bg-secondary/5 border border-secondary/10 rounded-lg p-6">
          <div class="flex items-start space-x-4">
            <svg class="w-6 h-6 text-[var(--color-primary)] flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <div>
              <h3 class="font-semibold mb-1">{t('contact.email')}</h3>
              <a href="mailto:cristian181199@gmail.com" class="text-[var(--text-secondary)] hover:text-[var(--color-primary)] transition-colors">
                cristian181199@gmail.com
              </a>
            </div>
          </div>
        </div>
        
        <div class="bg-secondary/5 border border-secondary/10 rounded-lg p-6">
          <div class="flex items-start space-x-4">
            <svg class="w-6 h-6 text-[var(--color-primary)] flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            <div>
              <h3 class="font-semibold mb-1">{t('contact.linkedin')}</h3>
              <a href="https://www.linkedin.com/in/cristian-quintero-garcia/" target="_blank" rel="noopener noreferrer" class="text-[var(--text-secondary)] hover:text-[var(--color-primary)] transition-colors">
                linkedin.com/in/cristian-quintero-garcia
              </a>
            </div>
          </div>
        </div>
        
        <div class="bg-secondary/5 border border-secondary/10 rounded-lg p-6">
          <div class="flex items-start space-x-4">
            <svg class="w-6 h-6 text-[var(--color-primary)] flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <div>
              <h3 class="font-semibold mb-1">{t('contact.github')}</h3>
              <a href="https://github.com/Cristian181199" target="_blank" rel="noopener noreferrer" class="text-[var(--text-secondary)] hover:text-[var(--color-primary)] transition-colors">
                github.com/Cristian181199
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Note: For full functionality, you need to:
  // 1. Add an Astro adapter (e.g., @astrojs/node)
  // 2. Set output to 'server' or 'hybrid' in astro.config.mjs
  // 3. Create the /src/pages/api/contact.ts endpoint
  // See README for instructions
  
  const form = document.getElementById('contact-form');
  const formMessage = document.getElementById('form-message');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const formData = new FormData(form as HTMLFormElement);
    const name = formData.get('name');
    const email = formData.get('email');
    const message = formData.get('message');
    
    // Create mailto link
    const subject = encodeURIComponent(`Contact from ${name}`);
    const body = encodeURIComponent(`Name: ${name}\nEmail: ${email}\n\nMessage:\n${message}`);
    const mailtoLink = `mailto:cristian181199@gmail.com?subject=${subject}&body=${body}`;
    
    // Open default email client
    window.location.href = mailtoLink;
    
    // Show confirmation message
    formMessage?.classList.remove('hidden', 'bg-red-500/10', 'text-red-500');
    formMessage?.classList.add('bg-green-500/10', 'text-green-500');
    formMessage!.textContent = 'Opening your email client...';
    
    setTimeout(() => {
      formMessage?.classList.add('hidden');
      (form as HTMLFormElement).reset();
    }, 3000);
  });
</script>
