---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const projects = [
  {
    name: t('projects.portfolio.name'),
    description: t('projects.portfolio.description'),
    tech: t('projects.portfolio.tech'),
    github: 'https://github.com/Cristian181199/portfolio-cristianqg'
  },
  {
    name: t('projects.webscraper.name'),
    description: t('projects.webscraper.description'),
    tech: t('projects.webscraper.tech'),
    github: 'https://github.com/Cristian181199/retailflux-webscraper'
  },
  {
    name: t('projects.api.name'),
    description: t('projects.api.description'),
    tech: t('projects.api.tech'),
    github: 'https://github.com/Cristian181199/retailflux-api'
  }
];
---

<section id="projects" class="py-20 px-4">
  <div class="container mx-auto max-w-6xl">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">
      {t('projects.title')}
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div 
          class="bg-secondary/5 border-2 border-secondary/10 rounded-xl p-6 hover:border-[var(--color-primary)] transition-all duration-300 flex flex-col group hover:shadow-2xl hover:shadow-[var(--color-primary)]/20 hover:-translate-y-2"
          style={`animation: fade-slide-up 0.6s ease-out ${index * 0.2}s both`}
        >
          <h3 class="text-2xl font-bold mb-3 group-hover:text-[var(--color-primary)] transition-colors duration-300">{project.name}</h3>
          <p class="text-[var(--text-secondary)] mb-4 flex-1 leading-relaxed">{project.description}</p>
          
          <div class="mb-4">
            <div class="flex flex-wrap gap-2">
              {project.tech.map((tech: string) => (
                <span class="px-3 py-1.5 bg-[var(--color-primary)]/10 text-[var(--color-primary)] rounded-full text-sm font-medium hover:bg-[var(--color-primary)] hover:text-white transition-all duration-300 cursor-default hover:scale-110">
                  {tech}
                </span>
              ))}
            </div>
          </div>
          
          <a
            href={project.github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center space-x-2 text-[var(--color-primary)] hover:underline font-medium group/link"
          >
            <svg class="w-5 h-5 group-hover/link:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span>{t('projects.viewCode')}</span>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes fade-slide-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
